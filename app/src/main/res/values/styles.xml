<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.ToggleButtons.Small" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">2dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">52dp</item>
    </style>

    <style name="App.ToolTip.Rounded" parent="Widget.Material3.Tooltip">
        <item name="shapeAppearance">@style/ShapeAppearance.ToolTip</item>
    </style>

    <style name="ShapeAppearance.ToolTip" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>


    <style name="App.Switches" parent="Widget.Material3.CompoundButton.Switch">
        <item name="track">@drawable/switch_track</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="thumbTint">@color/custom_switch_thumb_tint</item>
        <item name="trackTint">@color/custom_switch_track_tint</item>
    </style>

    <style name="ShapeAppearance.Overlay.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.MyApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>


</resources>