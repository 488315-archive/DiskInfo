<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/themes"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:gravity="start|center_vertical"
        android:drawablePadding="8dp"
        android:textAppearance="?attr/textAppearanceHeadlineLarge"
        app:drawableStartCompat="@drawable/ic_theme_large"
        app:drawableTint="?attr/colorPrimary" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/theme_purple"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="8dp"
            app:checkedIconTint="@color/white"
            android:layout_width="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/purple_primary_40"
                android:background="@drawable/ic_circle_24" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/theme_red"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="8dp"
            app:checkedIconTint="@color/white"
            android:layout_width="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/red_primary_40"
                android:background="@drawable/ic_circle_24" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/theme_yellow"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="8dp"
            app:checkedIconTint="@color/white"
            android:layout_width="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/yellow_primary_40"
                android:background="@drawable/ic_circle_24" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/theme_green"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="8dp"
            app:checkedIconTint="@color/white"
            android:layout_width="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/green_primary_40"
                android:background="@drawable/ic_circle_24" />

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

</LinearLayout>